    <script>
        //Id değerini *Sweet Alert ile getirme
        function showproductid(ProductId,menuTableId)//value->benim x.ProductId'den gelen değerim
        { 
            $.ajax({
                type: 'POST',
                url:"/Showcase/Menu/AddBasket",
                data: { 
                //id'değerim controllerdaki int idye denk gelir
                //menuTableId değerim controllerdaki int menuTableId değerime denk gelir
                        id:ProductId,//ürün Id'si buradan gönderilir
                        menuTableId:menuTableId//Masa Id'si buradan gönderilir
                },
                success:function(){
          swal("Seçili Ürünün Id Değeri: " + ProductId, "Seçtiğiniz Ürün Sepete Eklendi...", "success");
                },
               error:function(xhr,status,error){
                   console.error("hata",error);
                   console.log("yanıt",xhr.responseText);
               }
            });
        };      
