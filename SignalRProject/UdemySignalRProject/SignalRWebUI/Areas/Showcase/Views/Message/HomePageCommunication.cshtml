@using SignalRWebUI.DTOs.ComminicationDTOs
@model CreateCommunicationDTO
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bizimle İletişime Geçin...
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendCommunication" asp-controller="Message">
                        <div>
                            <input type="text" class="form-control" asp-for="NameSurname" placeholder="Adınız Soyadınız..." />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız..." />
                        </div>
                        <div>
                            <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz..." />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="MessageContent" placeholder="Mesajınız" />
                        </div>
                        <div class="btn_box">
                            <button onclick="sendmessage">
                              Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24077.45005961495!2d28.992969279598682!3d41.032228887476556!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab78eb4cc28d7%3A0xd6cc13bd2c633762!2zw5xza8O8ZGFyLCBLdXpndW5jdWssIDM0Njc0IMOcc2vDvGRhci_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1745434439579!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function sendmessage(value)
    {
        var messageContent = value;
        $.ajax({
            type: 'post',
            data: { item: messageContent },
            url: "/Showcase/Message/SendCommunication/",
            contentType: 'json',
            success: function () {
                console.log(messageContent);
            }
        });
    }
</script>