@using SignalRWebUI.DTOs.MenuTableDTOs
@model List<ResultMenuTableDTO>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int txt = 0;
	string status = "";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Masa Listesi:</div>
				</div>
				<div class="card-body">
					<div class="card-sub">
						Masalar ile ilgili işlemleri aşağıdaki tablodan yapabilirsiniz.
					</div>
					<table class="table mt-3">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Masa Adı</th>
								<th scope="col">Durum:</th>
								<th scope="col">Detaylar</th>
								<th scope="col">Sil</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var x in Model)
							{
								if (x.Status == false)
								{
									status = "Boş Masa";
								}
								if (x.Status == true)
								{
									status = "Dolu Masa";
								}
								txt += 1;
								<tr>
									<td>@txt</td>
									<td>@x.Name</td>
									<td>@status</td>
									<td><a href="/MenuTable/EditMenuTable/@x.TableId" class="btn btn-warning">Detaylar</a></td>
									<td><a href="/MenuTable/DeleteMenuTable/@x.TableId" class="btn btn-danger">Sil</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<a href="/MenuTable/AddMenuTable/" style="color:black" class="btn btn-info">Masa Ekle</a>
			</div>
		</div>

	</div>
</div>

