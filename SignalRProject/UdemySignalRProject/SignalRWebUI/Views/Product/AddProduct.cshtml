@model CreateProductDTO
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title" style="color:red">Ürün Ekleme Paneli</div>
					</div>

					<div class="card-body">
						<div style="margin-top:-20px" class="form-group">
							<label style="margin-left:-8px;font-size:25px">Ürün Adı:</label>
							<input style="margin-left:-10px" type="text" asp-for="ProductName" class="form-control" placeholder="Ürün Adını Giriniz...">
						</div>
						<div style="margin-top:-20px" class="form-group">
							<label style="margin-left:-8px;font-size:25px">Kategori Seçiniz:</label>
							@Html.DropDownListFor(y => y.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @style = "margin-left:-10px" })
						</div>
						<div style="margin-top:-20px" class="form-group">
							<label style="margin-left:-8px;font-size:25px">Fiyat:</label>
							<input style="margin-left:-10px" type="text" asp-for="Price" class="form-control" placeholder="Ürün Fiyatını Giriniz...">
						</div>
						<div style="margin-top:-20px" class="form-group">
							<label style="margin-left:-8px;font-size:25px">Resim:</label>
							<input style="margin-left:-10px" type="text" asp-for="ImageUrl" class="form-control" placeholder="Resim Url Giriniz...">
						</div>
						<div style="margin-top:-20px" class="form-group">
							<label style="margin-left:-8px;font-size:25px">Açıklama:</label>
							<textarea asp-for="Description" style="margin-left:-10px" class="form-control" rows="4" placeholder="Ürün Açıklamasını Girinizi..."></textarea>
						</div>
					</div>
					<button class="btn btn-success">Ürün Ekle</button>
				</div>
			</form>
		</div>
	</div>
</div>

