@model List<ResultProductDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .messageimg {
        border-radius: 50%;
        width: 50px;
        height: 45px;
        margin-left: 10px
    }
</style>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Listesi:</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim: </th>
                            <th> Ürün: </th>
                            <th> Kategori: </th>
                            <th> Fiyat: </th>
                            <th> Sil </th>
                            <th> Detaylar </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@x.ImageUrl" alt="image" class="messageimg" />
                                </td>
                                <td> @x.ProductName</td>
                                <td> @x.CategoryName </td>
                                <td> @x.Price </td>
                                <td> <a href="/Product/DeleteProduct/@x.ProductId" class="btn btn-danger">Sil</a> </td>
                                <td> <a href="/Product/EditProduct/@x.ProductId" class="btn btn-warning">Detaylar</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Product/AddProduct/" class="btn btn-success">Yeni Ürün</a>
    </div>
</div>
