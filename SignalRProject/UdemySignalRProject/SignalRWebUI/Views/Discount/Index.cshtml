@model List<ResultDiscountDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .messageimg {
        border-radius: 50%;
        width: 50px;
        height: 45px;
        margin-left: 10px
    }
</style>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İndirimli Ürünlerin Listesi:</h4>
            <div style="margin-top:8px" class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim: </th>
                            <th> Ürün: </th>
                            <th> İndirimli Fiyatı: </th>
                            <th> Sil </th>
                            <th> Detaylar </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@x.ImageUrl" alt="image" class="messageimg" />
                                </td>
                                <td> @x.Title</td>
                                <td> @x.Amount </td>
                                <td> <a href="/Discount/DeleteDiscount/@x.DiscountId" class="btn btn-danger">Sil</a> </td>
                                <td> <a href="/Discount/UpdateDiscount/@x.DiscountId" class="btn btn-warning">Detaylar</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Discount/AddDiscount/" class="btn btn-success">Yeni İndirim</a>
    </div>
</div>


